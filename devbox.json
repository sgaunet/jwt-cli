{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.4/.schema/devbox.schema.json",
  "packages": [
    "goreleaser@2.9.0",
    "go-task@3.41.0",
    "golangci-lint@2.2.2"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "build": [
        "task build"
      ],
      "run": [
        "task run"
      ],
      "linter": [
        "task linter"
      ],
      "snapshot": [
        "task snapshot"
      ],
      "release": [
        "task release"
      ]
    }
  }
}
